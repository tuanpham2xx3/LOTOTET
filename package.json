{
  "name": "lototet",
  "version": "1.0.0",
  "private": true,
  "description": "LOTOTET Bingo Game - Family Mode",
  "scripts": {
    "dev:web": "pnpm --filter @lototet/frontend dev",
    "dev:api": "pnpm --filter @lototet/backend start:dev",
    "dev": "concurrently \"pnpm dev:api\" \"pnpm dev:web\"",
    "build": "pnpm -r build",
    "build:shared": "pnpm --filter @lototet/shared build",
    "build:api": "pnpm --filter @lototet/backend build",
    "build:web": "pnpm --filter @lototet/frontend build",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "pnpm -r test",
    "test:shared": "pnpm --filter @lototet/shared test"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  }
}
